<div class="card">
  <div class="org-logo">
    <img class="org-logo__image" src="{{logo}}" alt="Company Logo" />
  </div>
  <h1 class="heading">Change Password</h1>
  <div class="text-block">
    <div class="text-block__text">
        Congratulations! You have successfully changed your password. Click the link below to continue.
    </div>
  </div>
  {{#with _links as |actions|}}
  {{#if continueAuthentication}}
  <form class="form form--margin-small" id="AuthnWidgetForm">
    <button data-actionId="continueAuthentication" class="button">Continue</button>
  </form>
  {{/if}}
  {{/with}}
</div>
