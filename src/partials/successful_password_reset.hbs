<div class="card">
  <div class="org-logo">
    <div class="org-logo__image" style="background-image: url('{{logo}}');" alt="Company Logo"></div>
  </div>
  <h1 class="heading">Account Recovery</h1>
  <div class="text-block">
    <div class="text-block__text">Your password has been reset. Please use your new password to sign on again.</div>
  </div>
  {{#with _links as |actions|}}
  {{#if continueAuthentication}}
    <form class="form form--margin-small" id="AuthnWidgetForm">
      <button data-actionId="continueAuthentication" class="button">Continue</button>
    </form>
  {{/if}}
  {{/with}}
</div>
